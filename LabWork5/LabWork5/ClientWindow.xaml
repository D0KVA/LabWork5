<Window x:Class="LabWork5.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork5"
        mc:Ignorable="d"
        Title="ClientWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="cbxRab" Grid.Row="0" Grid.Column="0" SelectionChanged="cbxCl_SelectionChanged"/>
        <Frame x:Name="PageFrameRab" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <Button x:Name="Comeback" Grid.Column="0" Grid.Row="3" Content="Вернуться" FontSize="20" Click="Comeback_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="Cassa" Grid.Column="0" Grid.Row="2" Content="Купить продукт" FontSize="20" Click="Comeback_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
